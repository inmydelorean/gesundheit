
<div class="bg-white">

  <!-- Hero section -->
  <div class="relative bg-gray-900">
    <!-- Decorative image and overlay -->
    <div aria-hidden="true" class="absolute inset-0 overflow-hidden">
      <img src="https://images.unsplash.com/photo-1606811841689-23dfddce3e95?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2874&q=80" alt="" class="h-full w-full object-cover object-center">
    </div>
    <div aria-hidden="true" class="absolute inset-0 bg-gray-900 opacity-50"></div>

    <div class="relative mx-auto flex max-w-3xl flex-col items-center px-6 py-32 text-center sm:py-64 lg:px-0">
      <h1 class="text-4xl font-bold tracking-tight text-white lg:text-6xl">We Put Patients First</h1>
      <p class="mt-4 text-xl text-white">Gesundheit is the best health care provider and medical clinic to go when looking for the perfect doctors and treatment options for your health care needs.</p>
      <% if user_signed_in? %>
        <%= link_to "Schedule An Appointment", new_appointment_path, class: "mt-8 inline-block rounded-md border border-transparent bg-white px-8 py-3 text-base font-medium text-gray-900 hover:bg-gray-100" %>
      <% else %>
        <%= link_to "Sign In To Schedule An Appointment", new_user_session_path, class: "mt-8 inline-block rounded-md border border-transparent bg-white px-8 py-3 text-base font-medium text-gray-900 hover:bg-gray-100" %>
      <% end %>
    </div>
  </div>

  <main>
    <!-- Category section -->
    <section aria-labelledby="category-heading" class="pt-24 sm:pt-32 xl:mx-auto xl:max-w-7xl xl:px-8">
      <div class="px-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8 xl:px-0">
        <h2 id="category-heading" class="text-2xl font-bold tracking-tight text-gray-900">Browse by Category</h2>
        <%= link_to categories_path, class: "hidden text-sm font-semibold text-indigo-600 hover:text-indigo-500 sm:block" do %>
          Browse all categories
          <span aria-hidden="true"> &rarr;</span>
        <% end %>
      </div>

      <div class="mt-4 flow-root">
        <div class="-my-2">
          <div class="relative box-content h-80 overflow-x-auto py-2 xl:overflow-visible">
            <div class="absolute flex space-x-8 px-4 sm:px-6 lg:px-8 xl:relative xl:grid xl:grid-cols-5 xl:gap-x-8 xl:space-x-0 xl:px-0">

              <% @categories.each do |category| %>
                <%= link_to category, class: "relative flex h-80 w-56 flex-col overflow-hidden rounded-lg p-6 hover:opacity-75 xl:w-auto" do %>
                  <span aria-hidden="true" class="absolute inset-0">
                    <% if category.picture.attached? %>
                      <%= cl_image_tag category.picture.key, class: "h-full w-full object-cover object-center" %>
                    <% else %>
                      <img src="https://tailwindui.com/img/ecommerce-images/home-page-01-category-01.jpg" alt="" class="h-full w-full object-cover object-center">
                    <% end %>
                  </span>
                  <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-gray-800 opacity-50"></span>
                  <span class="relative mt-auto text-center text-xl font-bold text-white"><%= category.name.pluralize %></span>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-6 px-4 sm:hidden">
        <a href="#" class="block text-sm font-semibold text-indigo-600 hover:text-indigo-500">
          Browse all categories
          <span aria-hidden="true"> &rarr;</span>
        </a>
      </div>
    </section>


    <!-- Featured section -->
    <section aria-labelledby="comfort-heading" class="mx-auto max-w-7xl px-4 py-24 sm:px-6 sm:py-32 lg:px-8">
      <div class="relative overflow-hidden rounded-lg">
        <div class="absolute inset-0">
          <img src="https://images.unsplash.com/photo-1630448925000-f014372affc7?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80" alt="" class="h-full w-full object-cover object-center">
        </div>
        <div class="relative bg-gray-900 bg-opacity-75 px-6 py-32 sm:px-12 sm:py-40 lg:px-16">
          <div class="relative mx-auto flex max-w-3xl flex-col items-center text-center">
            <h2 id="comfort-heading" class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Keep track of your appointments</h2>
            <p class="mt-3 text-xl text-white">Open your patient profile to view your appointments and doctors' recommendations.</p>
            <% if user_signed_in? %>
              <%= link_to "See patient profile", user_profile_path, class: "mt-8 block w-full rounded-md border border-transparent bg-white px-8 py-3 text-base font-medium text-gray-900 hover:bg-gray-100 sm:w-auto" %>
            <% else %>
              <%= link_to "Sign in as a patient", new_user_session_path, class: "mt-8 block w-full rounded-md border border-transparent bg-white px-8 py-3 text-base font-medium text-gray-900 hover:bg-gray-100 sm:w-auto" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </main>

  <footer class="bg-gray-900" aria-labelledby="footer-heading">
    <h2 id="footer-heading" class="sr-only">Footer</h2>
    <div class="mx-auto max-w-7xl px-6 pb-8">
      <div class="mt-8 border-t border-white/10 pt-8 md:flex md:items-center md:justify-between">
        <div class="flex space-x-6 md:order-2">
            <% if doctor_signed_in? %>
              <%= link_to "Doctor profile", doctor_profile_path, class: "text-xs text-gray-500 hover:text-gray-400" %>
            <% else %>
              <%= link_to "Sign in as a doctor", new_doctor_session_path, class: "text-xs text-gray-500 hover:text-gray-400" %>
            <% end %>
        </div>
        <p class="mt-8 text-xs leading-5 text-gray-400 md:order-1 md:mt-0">&copy; 2023 Gesundheit Clinic. All rights reserved.</p>
      </div>
    </div>
  </footer>
</div>