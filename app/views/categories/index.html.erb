<section class="mx-auto max-w-7xl px-4 py-16">
  <div class="sm:flex sm:items-baseline sm:justify-between">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900">Our Specialties</h1>
  </div>
  <div class="mt-6 grid grid-cols-1 gap-y-10 sm:grid-cols-3 sm:gap-x-6 sm:gap-y-0 lg:gap-x-8">
    <% @categories.each do |category| %>
      <div class="group relative mb-8 lg:mb-16">
        <div class="h-96 w-full overflow-hidden rounded-lg sm:aspect-h-3 sm:aspect-w-2 group-hover:opacity-75 sm:h-auto">
          <% if category.picture.attached? %>
            <%= cl_image_tag category.picture.key, class: "h-full w-full object-cover object-center" %>
          <% else %>
            <img src="https://tailwindui.com/img/ecommerce-images/home-page-03-favorite-01.jpg" alt="" class="h-full w-full object-cover object-center">
          <% end %>
        </div>
        <h3 class="mt-4 text-xl font-semibold text-gray-900">
          <%= link_to category do %>
            <span class="absolute inset-0"></span>
            <%= category.name.pluralize %>
          <% end %>
        </h3>
        <p class="mt-1 text-sm text-gray-500"><%= pluralize(category.doctors.count, "doctor") %> </p>
      </div>
    <% end %>
  </div>
</section>

